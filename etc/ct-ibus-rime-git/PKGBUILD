pkgname=ct-ibus-rime-git
pkgver=r108.6b659b0
pkgrel=1
pkgdesc="Rime input method engine for ibus"
arch=('i686' 'x86_64')
url="https://github.com/rime/ibus-rime"
license=('GPL3')
depends=('ct-ibus-git' 'libnotify' 'ct-librime-git' 'ct-brise-git')
makedepends=('cmake' 'git')
install='ibus-rime.install'
conflicts=('ibus-rime')
source=("git+https://github.com/rime/ibus-rime.git")
md5sums=('SKIP')
_gitname="ibus-rime"

pkgver() {
    cd "$srcdir/${_gitname}"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd $_gitname
  make
}

package() {
  cd $_gitname
  make DESTDIR="$pkgdir" install
}
